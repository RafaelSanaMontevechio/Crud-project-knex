<h1>Nova pessoa</h1>

<div class="container">
    <form class="pure-form pure-form-stacked" method="POST">
        <fieldset>
            <div class="pure-g">
                <div class="pure-u-1 pure-u-md-1-3">
                    <label for="name">Nome</label>
                    <input id="name" class="pure-u-23-24" type="text" name="name" required>
                </div>

                <div class="pure-u-1 pure-u-md-1-3">
                    <label for="birth">Nascimento</label>
                    <input id="birth" class="pure-u-23-24" type="text" name="birth" required>
                </div>

                <div class="pure-u-1 pure-u-md-1-3">
                    <label for="jobRole">Cargo</label>
                    <input id="jobRole" class="pure-u-23-24" type="text" name="jobRole" required>
                </div>
            </div>
        </fieldset>
        <button class="pure-button">Salvar</button>
    </form>
</div>

