<h1>Atualizar pessoa</h1>
<div class="container">
    <form class="pure-form pure-form-stacked" method="POST">
        <fieldset>
            <div class="pure-g">
                <div class="pure-u-1 pure-u-md-1-3">
                    <label for="name">Nome</label>
                    <input id="name" class="pure-u-23-24" type="text" name="name" value="<%= pessoa.nome %>">
                </div>

                <div class="pure-u-1 pure-u-md-1-3">
                    <label for="birth">Nascimento</label>
                    <input id="birth" class="pure-u-23-24" type="text" name="birth" value="<%= pessoa.nascimento %>">
                </div>

                <div class="pure-u-1 pure-u-md-1-3">
                    <label for="jobRole">Cargo</label>
                    <input id="jobRole" class="pure-u-23-24" type="text" name="jobRole" value="<%= pessoa.cargo %>">
                </div>
            </div>
        </fieldset>
        <button class="pure-button" type="submit">Salvar</button>
    </form>
</div>

